modules = ["web", "nodejs-20", "postgresql-16"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["ffmpeg", "chromium", "noto-fonts", "noto-fonts-color-emoji", "noto-fonts-cjk-sans"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Web to Video Converter"

[[workflows.workflow]]
name = "Web to Video Converter"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "CHROMIUM_PATH=$(which chromium) PORT=5000 node backend/server.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["node", "backend/server.js"]
build = ["npx", "puppeteer", "browsers", "install", "chrome"]
